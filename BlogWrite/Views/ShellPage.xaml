            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">

                <Image x:Name="AppTitleBarIcon" Source="/Assets/BlogWrite.ico" HorizontalAlignment="Left" Width="18" Height="18" Margin="6,0,0,0"/>
                <TextBlock x:Name="AppTitleBarText" VerticalAlignment="Center" TextWrapping="NoWrap" Style="{StaticResource CaptionTextBlockStyle}" Margin="9, 0, 0, 0" Visibility="Collapsed"/>
                
            </StackPanel>
            
            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <MenuBar x:Name="AppMenuBar" Grid.Column="0">
                    <MenuBarItem x:Uid="ShellMenuBarItem_File">
                        <MenuBarItem.Items>
                            <MenuFlyoutItem x:Uid="ShellMenuBar_Options_Settings" Command="{x:Bind ViewModel.MenuSettingsCommand}" />
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem x:Uid="ShellMenuItem_File_Exit" Command="{x:Bind ViewModel.MenuFileExitCommand}" />
                        </MenuBarItem.Items>
                    </MenuBarItem>
                    <MenuBarItem x:Uid="ShellMenuBarItem_View">
                        <MenuBarItem.Items>
                            <MenuFlyoutItem x:Uid="ShellMenuItem_View_Feeds" Command="{x:Bind ViewModel.MenuViewFeedsCommand}" />
                        </MenuBarItem.Items>
                    </MenuBarItem>
                </MenuBar>
                
            </Grid>

            <Grid Grid.Row="0" Grid.Column="2" x:Name="AppTitleBar"></Grid>

        </Grid>

        <Grid Grid.Row="1">

            <Frame x:Name="NavigationFrame" NavigationFailed="NavigationFrame_NavigationFailed"/>

