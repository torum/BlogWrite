                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="ShellMenuItem_Views_ContentGrid" helpers:NavigationHelper.NavigateTo="BlogWrite.ViewModels.ContentGridViewModel">
                </NavigationViewItem>

                <NavigationViewItem Content="ShellMenuItem_Views_ListDetails" helpers:NavigationHelper.NavigateTo="BlogWrite.ViewModels.ListDetailsViewModel">
                </NavigationViewItem>

                <NavigationViewItem Content="ShellMenuItem_Views_WebView" helpers:NavigationHelper.NavigateTo="BlogWrite.ViewModels.WebViewViewModel">
                </NavigationViewItem>

                <NavigationViewItem Content="ShellMenuItem_Views_DataGrid" helpers:NavigationHelper.NavigateTo="BlogWrite.ViewModels.DataGridViewModel">
                </NavigationViewItem>

            </NavigationView.MenuItems>

            <Grid>
                <Frame x:Name="NavigationFrame" NavigationFailed="NavigationFrame_NavigationFailed"/>
            </Grid>

        </NavigationView>

    </Grid>
</Page>
